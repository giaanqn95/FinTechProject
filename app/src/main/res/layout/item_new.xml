<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_img_hot_new"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/demo" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_img_hot_new">

        <TextView
            android:id="@+id/item_tv_hot_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="Say something!!!"/>

        <TextView
            android:id="@+id/item_tv_hot_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_tv_hot_title"
            android:ellipsize="end"
            android:text="adshaksdhkasjdhkjadhkjashdkjashdkjashdkjhasdkjhasdkjhaskdhaskjdh"
            android:maxLines="1"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>