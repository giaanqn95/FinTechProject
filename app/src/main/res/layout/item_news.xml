<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_new_iv"
        android:layout_width="@dimen/margin_padding_50dp"
        android:layout_height="@dimen/margin_padding_50dp" />

    <TextView
        android:id="@+id/item_new_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_10dp"
        android:text="sdfs"
        android:textColor="@color/black"
        android:textSize="@dimen/margin_padding_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_new_iv"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_new_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_new_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/item_new_tv_title"
        android:maxLines="1"
        android:ellipsize="end"/>

</android.support.constraint.ConstraintLayout>