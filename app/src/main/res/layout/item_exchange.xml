<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_exchange_iv"
        android:layout_width="@dimen/margin_padding_50dp"
        android:layout_height="@dimen/margin_padding_50dp"
        android:padding="10dp"
        android:src="@drawable/ic_vn_3x" />

    <TextView
        android:id="@+id/item_exchange_tv_country"
        android:layout_width="90dp"
        android:layout_height="@dimen/margin_padding_50dp"
        android:gravity="center_vertical"
        android:text="VIE"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/item_exchange_iv" />

    <TextView
        android:id="@+id/item_exchange_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_padding_50dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_exchange_tv_country" />


</android.support.constraint.ConstraintLayout>